<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bony.goti.MainActivity1"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:src="@drawable/a43"

        tools:ignore="ContentDescription,ObsoleteLayoutParam" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <ImageButton


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/button1"
            android:background="@drawable/previous"

            tools:ignore="ButtonStyle,ContentDescription,HardcodedText,InefficientWeight,RtlHardcoded" />
        <ImageButton
            android:id="@+id/button2"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/slide"

            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded" />
        <ImageButton

            android:background="@drawable/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/button3"
            android:layout_marginRight="50dp"
            tools:ignore="ContentDescription,HardcodedText,InefficientWeight,RtlHardcoded"
            />
    </LinearLayout>


</LinearLayout>



